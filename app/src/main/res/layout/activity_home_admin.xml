<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Home_Admin"
    android:background="@drawable/background_home_admin"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/back_here"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="140dp"
        android:onClick="onLoginClick3">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:src="@drawable/back_icon"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Back"
            android:textSize="20dp"
            style="@style/textBold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="390dp"
            android:layout_height="190dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/item_admin_food"
                android:orientation="vertical"

                >
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_food_item1"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"


                    />

                <TextView
                    style="@style/food_item_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Sandwich"
                    android:textColor="@color/Green_main"
                    android:textSize="18dp"
                    android:onClick="onSandwichsClick"
                    android:elevation="2dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/item_admin_food"
                >
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_food_item2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"


                    />
                <TextView
                    style="@style/food_item_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Burgers"
                    android:onClick="onBurgersClick"
                    android:textColor="@color/Green_main"
                    android:textSize="18dp"

                    android:elevation="2dp"

                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="390dp"
            android:layout_height="190dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp"
            >
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/item_admin_food"
                >
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_food_item3"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"


                    />
                <TextView
                    style="@style/food_item_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Drinks"
                    android:onClick="onDrinksClick"
                    android:textColor="@color/Green_main"
                    android:textSize="18dp"

                    android:elevation="2dp"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/item_admin_food"
                >
                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:src="@drawable/img_food_item4"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"


                    />
                <TextView
                    style="@style/food_item_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Pizza"
                    android:textColor="@color/Green_main"
                    android:textSize="18dp"
                    android:onClick="onPizzasClick"
                    android:elevation="2dp"

                    />

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>

</LinearLayout>